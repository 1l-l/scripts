--// Controls:
--// F - Activate (Hold a tool and press F)
--// Shift - Speed boost

-- You can modify the values below
local speed = 0.5
local maxSpeed = 2
local acceleration = 0.05 -- Less = smoother
----------------------------------

local enabled = false
local orginalGripPos
local player = game:GetService("Players").LocalPlayer

local w, a, s, d = false, false, false, false

function ToolFly(tool)
	local currentVelocity = Vector3.new()
	local player = game.Players.LocalPlayer
	local character = player.Character
	local humanoid = character:FindFirstChildOfClass("Humanoid")

	task.spawn(function()
		while enabled and tool do
			humanoid:EquipTool(tool)
			task.wait()
			humanoid:UnequipTools()
		end
	end)

	while enabled and tool do
		task.wait()
		local add = Vector3.new()
		local lookVector = workspace.CurrentCamera.CFrame.LookVector
		local rightVector = workspace.CurrentCamera.CFrame.RightVector

		if game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.LeftShift) then
			speed = maxSpeed
		end

		if w then
			add -= lookVector
		end
		if s then
			add += lookVector
		end
		if a then
			add += rightVector
		end
		if d then
			add -= rightVector
		end

		currentVelocity = currentVelocity:Lerp(add * speed, acceleration)
		tool.Grip = CFrame.new(tool.Grip.Position + currentVelocity)
	end
end


game:GetService("UserInputService").InputBegan:Connect(function(input)
	if input.KeyCode == Enum.KeyCode.F then
		if true then -- game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.LeftControl)
			local tool = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Tool")
			if tool and tool:FindFirstChild("Handle") and not enabled then
				enabled = true
				tool = tool
				orginalGripPos = tool.Grip
				workspace.CurrentCamera.CameraSubject = tool.Handle
				local root = player.Character.HumanoidRootPart
				root.CFrame = CFrame.new(root.Position)
				root.Anchored = true
				ToolFly(tool)
			elseif not tool then
				print("You must have a tool equiped")
			else
				enabled = false
				tool.Grip = orginalGripPos
				workspace.Camera.CameraSubject = game.Players.LocalPlayer.Character
				player.Character.HumanoidRootPart.Anchored = false
			end
		end
	end
end)

game:GetService("UserInputService").InputBegan:Connect(function(input)
	if not enabled then return end
	if input.KeyCode == Enum.KeyCode.W then
		w = true
	elseif input.KeyCode == Enum.KeyCode.A then
		a = true
	elseif input.KeyCode == Enum.KeyCode.S then
		s = true
	elseif input.KeyCode == Enum.KeyCode.D then
		d = true
	end
end)

game:GetService("UserInputService").InputEnded:Connect(function(input)
	if not enabled then return end
	if input.KeyCode == Enum.KeyCode.W then
		w = false
	elseif input.KeyCode == Enum.KeyCode.A then
		a = false
	elseif input.KeyCode == Enum.KeyCode.S then
		s = false
	elseif input.KeyCode == Enum.KeyCode.D then
		d = false
	end
end)
